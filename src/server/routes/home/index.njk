{% extends 'layouts/page.njk' %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  {{ appHeading({
    text: heading,
    caption: "Marine Licensing Demo"
  }) }}

  {% call appPageBody() %}

  {% if profile.displayName %}
  <p>
    {{profile.displayName}} ({{profile.email}})
  </p>
  {% endif %}

  <a href="{{signInUrl}}">sign in as admin</a>

    {{ govukTable({
      head: [
        {
          text: "case number"
        },
        {
          text: "title"
        },
        {
          text: ''
        }
      ],
      rows: rows
    }) }}

    <form method="POST" case>
      {{ govukInput({
        label: {
          text: "What is the name of your new case?"
        },
        id: "case-title",
        name: "title"
      }) }}

      {{ govukInput({
        label: {
          text: "What is your name?"
        },
        id: "contact-name",
        name: "name"
      }) }}
      {{ govukButton({
        text: "Create case"
      }) }}
    </form>
  {% endcall %}

{% endblock %}
